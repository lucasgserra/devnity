{
  "compilerOptions": {
    "target": "ES6",                // Define o target do JavaScript gerado (ES6 neste caso)
    "module": "commonjs",           // Define o módulo que o Node usará
    "strict": true,                 // Habilita o modo estrito (opcional, mas recomendado)
    "esModuleInterop": true,        // Permite importar módulos ES6
    "skipLibCheck": true,           // Ignora a verificação de tipos nas bibliotecas
    "outDir": "./dist"              // Pasta de saída do código compilado
  },
  "include": ["src/**/*.ts"],        // Inclui todos os arquivos .ts na pasta src
  "exclude": ["node_modules"]        // Exclui a pasta node_modules
}
